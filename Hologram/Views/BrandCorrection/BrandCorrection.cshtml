@model IEMS_WEB.Areas.Hologram.Models.ResponseModel.BrandCorrectionResponse

@{
    ViewBag.Title = "BrandCorrection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="row">
        <div class="col-12">
            <h3>
                <span>Brand Correction List </span>
                <button type="button" class="btn btn-success pull-right" id="btnnew" data-translate="Create">
                    <i class="fa fa-plus"></i> New
                </button>
            </h3>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <table id="GridBrancdCorrectionListDetails" cellpadding="0" cellspacing="0" style="width:100%!important" class="table dispaly">
            <thead>
                <tr style="text-align: center;">
                    <th style="text-align: center;" class="green" data-translate="Shop Name">Request No</th>
                    <th style="text-align: center;" class="green" data-translate="Shop Code">Request Date</th>
                    <th style="text-align: center;" class="green" data-translate="Deo Name">Old Brand</th>
                    <th style="text-align: center;" class="green" data-translate="Deo Id">New Brand</th>
                    <th style="text-align: center;" class="green" data-translate="Circle Name">Old Pack</th>
                    <th style="text-align: center;" class="green" data-translate="Circle Name">New Pack</th>
                    <th style="text-align: center;" class="green" data-translate="Circle Name">Status</th>
                    <th style="text-align: center;" class="green" data-translate="Circle Name">Action</th>
                </tr>
            </thead>
        </table>
    </div>
}
<script type="text/javascript">
    $("#btnnew").click(function () {
        window.location.href = "../BrandCorrection/BrandCorrectionView";
    });

    $(document).ready(function () {

        $('#GridBrancdCorrectionListDetails').DataTable({
            "ajax": {
                "url": "/Hologram/BrandCorrection/GetAllBrandCorrectionListDetails",
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                { "data": 'RequestNumber', "autoWidth": true },
                { "data": 'RequestDate', "autoWidth": true },
                { "data": 'OldBrand', "autoWidth": true },
                { "data": 'NewBrand', "autoWidth": true },
                { "data": 'OldPack', "autoWidth": true },
                { "data": 'NewPack', "autoWidth": true },
                {
                    "data": "Status", "autoWidth": true, "sortable": false, "render": function (data, type, row) {
                        return '<a title="Click here to Edit" href="javascript:EditClick(\'' + row.ShopId + '\', \'V\')"><i class="fa fa-eye" style="font-size: 16px"></i></a>';
                    }
                },
                {
                    "data": "Action", "autoWidth": true, "sortable": false, "render": function (data, type, row) {
                        return '<a title="Click here to Edit" href="javascript:EditClick(\'' + row.ShopId + '\', \'V\')"><i class="fa fa-edi" style="font-size: 16px"></i></a>';
                    }
                }
            ]
        });

    });
</script>
