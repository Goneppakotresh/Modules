@model IEMS_WEB.Areas.Hologram.Models.RequestModel.SpoolBoxLabelPrint

@{
    ViewBag.Title = "SpoolBoxLabelPrint";
}
@{
    ViewBag.Title = "PurchaseOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-title">
    <div class="row">
        <div class="col-12">
            <h3>
                <span>Spool & Box Label Print List </span>
                <button type="button" class="btn btn-success pull-right" id="btnnew" data-translate="Create">
                    <i class="fa fa-plus"></i> New
                </button>
            </h3>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <table id="GridSpoolBoxLabelPrintDetails" cellpadding="0" cellspacing="0" style="width:100%!important" class="table display">
            <thead>
                <tr style="text-align: center;">
                    <th style="text-align: center;" class="green" data-translate="Shop Code">Request Date</th>
                    <th style="text-align: center;" class="green" data-translate="Shop Name">Request No</th>
                    <th style="text-align: center;" class="green" data-translate="Deo Name">No of Boxes</th>
                    <th style="text-align: center;" class="green" data-translate="Deo Id">Total No Of Spool</th>
                    <th style="text-align: center;" class="green" data-translate="Circle Name">Status</th>
                    <th style="text-align: center;" class="green" data-translate="Circle Name">Action</th>
                </tr>
            </thead>
        </table>
    </div>
}
<script type="text/javascript">
    $("#btnnew").click(function () {
        window.location.href = "../SpoolBoxLabelPrint/SpoolBoxLabelPrintCreation";
    });

    $(document).ready(function () {

        $('#GridSpoolBoxLabelPrintDetails').DataTable({
            "ajax": {
                "url": "../SpoolBoxLabelPrint/GetAllSpoolBoxLabelPrintDetails",
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                { "data": 'requestDate', "autoWidth": true },
                { "data": 'requestNumber', "autoWidth": true },
                { "data": 'boxes', "autoWidth": true },
                { "data": 'spool', "autoWidth": true },
                {
                    "data": "status", "autoWidth": true, "sortable": false, "render": function (data, type, row) {
                        return '<a title="Click here to Edit" href="javascript:EditClick(\'' + row.ShopId + '\', \'V\')"><i class="fa fa-eye" style="font-size: 16px"></i></a>';
                    }
                },
                  {
                    "data": "Action", "autoWidth": true, "sortable": false, "render": function (data, type, row) {
                        return '<a title="Click here to Edit" href="javascript:EditClick(\'' + row.ShopId + '\', \'V\')"><i class="fa fa-edi" style="font-size: 16px"></i></a>';
                    }
                }
            ]
        });

    });
</script>

